!!!
%html
  %head
    %title Accounting
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = csrf_meta_tag
  %body
    #bodywrapper
      #header
        #logo
          %h1 Accounting
        #navigation
          = link_to t('views.transaction.defaults.new'), new_transaction_path
          |
          = link_to t('models.transaction.model_name_plural'), transactions_path
          |
          = link_to t('models.account.model_name_plural'), accounts_path
          |
          = link_to t('views.account.defaults.balance_list'), accounts_path(:view => "balances")
          |
      #contentwrapper
        #ajax_status
        = yield

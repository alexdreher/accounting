%table#transactions.display
  %thead      
    %tr
      %th= t('models.transaction.id')
      %th= t('models.transaction.booking_date')
      %th= t('models.transaction.debit')
      %th= t('models.transaction.credit')
      %th= t('models.transaction.amount')
      %th= t('models.transaction.title')
  %tbody
    - @transactions.each do |transaction|
      %tr
        %td= transaction.id
        %td= transaction.booking_date
        %td= transaction.debit_account.number
        %td= transaction.credit_account.number
        %td= number_to_currency(transaction.amount)
        %td= transaction.title
= javascript_include_tag 'jquery.dataTables'
= javascript_include_tag 'transactions_table'
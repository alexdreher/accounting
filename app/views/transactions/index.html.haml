%h1 Listing transactions

%table#transactions
  %thead
    %tr
      %th{:colspan => "3"}
        Balance:
        %span#balance hi
      %th{:colspan => "3"}
        Annual amount:
        %span#period_balance hi
    %tr
      %th Id
      %th Booking date
      %th Debit
      %th Credit
      %th Amount
      %th Title
      %th
      %th
      %th
  %tbody
  - @transactions.each do |transaction|
    %tr
      %td= transaction.id
      %td= transaction.booking_date
      %td= transaction.debit_id
      %td= transaction.credit_id
      %td= transaction.amount
      %td= transaction.title
      %td= link_to 'Show', transaction
      %td= link_to 'Edit', edit_transaction_path(transaction)
      %td= link_to 'Destroy', transaction, :confirm => 'Are you sure?', :method => :delete

%br

= link_to 'New Transaction', new_transaction_path

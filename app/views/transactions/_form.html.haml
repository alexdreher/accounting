= form_for @transaction do |f|
  -if @transaction.errors.any?
    #error_explanation
      %h2= "#{pluralize(@transaction.errors.count, "error")} prohibited this transaction from being saved:"
      %ul
        - @transaction.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :book_date
    %br/
    = f.text_field :book_date
  .field
    = f.label :debit
    %br/
    = f.text_field :debit
  .field
    = f.label :credit
    %br/
    = f.text_field :credit
  .field
    = f.label :amount
    %br/
    = f.text_field :amount
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .actions
    = f.submit 'Save'
    
= javascript_include_tag 'transactions'

= form_for @account_type do |f|
  -if @account_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@account_type.errors.count, "error")} prohibited this account_type from being saved:"
      %ul
        - @account_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title, t('.models.account.title')
    = f.text_field :title
  .field
    = f.label :debit, t('.models.account.debit')
    = f.text_field :debit
  .field
    = f.label :credit, t('.models.account.credit')
    = f.text_field :credit
  .actions
    = f.submit
